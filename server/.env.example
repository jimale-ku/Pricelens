# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/pricelens_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth Configuration
# Note: GOOGLE_CALLBACK_URL should be your backend URL (not the app deep link)
# The backend will redirect to the app deep link (pricelens://) after authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Store Integration API Keys
# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_ASSOCIATE_TAG=your-amazon-associate-tag
AMAZON_REGION=us-east-1

# Walmart API
WALMART_API_KEY=your-walmart-api-key

# Target API (RedCircle API or similar)
TARGET_API_KEY=your-target-api-key

# SERP API (for web scraping fallback)
SERP_API_KEY=your-serp-api-key
SERPAPI_KEY=your-serpapi-key
# Serper.dev (recommended for Maps + Shopping - use for service categories)
SERPER_API_KEY=your-serper-api-key

# Development Mode: Use mock data instead of API calls to save costs
# Set to 'true' to use mock data, 'false' to use real APIs
# If not set, automatically uses mock data in development when no API key is present
USE_MOCK_SERVICE_DATA=false

# Cache TTL for Serper API responses (in hours, default: 24, max: 168 = 1 week)
# Increase this during development to reduce API calls
SERPER_CACHE_TTL_HOURS=24

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=debug

# Email Configuration (for alerts - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Redis Configuration (for caching - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3001

# AI Receipt Scanner (optional - OpenAI Vision)
OPENAI_API_KEY=sk-your-openai-api-key